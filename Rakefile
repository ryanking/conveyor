# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/conveyor'

Hoe.new('conveyor', Conveyor::VERSION) do |p|
  p.rubyforge_name = 'conveyor'
  p.author = 'Ryan King'
  p.email = 'ryan@theryanking.com'
  p.extra_deps << ['mongrel']
  p.extra_deps << ['activesupport']
  p.extra_deps << ['json']
end

